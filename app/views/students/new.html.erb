<h1>Register</h1>

<% if flash.alert %>
  <div style="color: red;">
    <%= flash.alert %>
  </div>
<% end %>

<%= form_with model: @student, local: true do |form| %>
  <div>
    <%= form.label :username, "Username" %>
    <%= form.text_field :username, required: true %>
  </div>

  <div>
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit "Register" %>
  </div>
<% end %>

<%= link_to "Already have an account? Log in here.", login_path %>
