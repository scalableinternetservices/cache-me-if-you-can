<h1 style="text-align: center; font-size: 24px; color: #333;">New Professor</h1>

<%= form_with(model: @professor, local: true, html: { style: 'max-width: 600px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border: 1px solid #e0e0e0; border-radius: 8px;' }) do |form| %>
  <div style="margin-bottom: 15px;">
    <%= form.label :name, "Professor's Name", style: 'display: block; font-weight: bold; margin-bottom: 5px; color: #555;' %>
    <%= form.text_field :name, placeholder: "Enter the professor's name", required: true, style: 'width: 100%; padding: 10px; font-size: 14px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;' %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :department, "Department", style: 'display: block; font-weight: bold; margin-bottom: 5px; color: #555;' %>
    <%= form.text_field :department, placeholder: "Enter the department", required: true, style: 'width: 100%; padding: 10px; font-size: 14px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;' %>
  </div>

  <div style="text-align: center; margin-top: 20px;">
    <%= form.submit "Create Professor", style: 'background-color: #007bff; color: white; padding: 10px 15px; font-size: 14px; border: none; border-radius: 5px; cursor: pointer;' %>
  </div>
<% end %>

<div style="text-align: center; margin-top: 15px;">
  <%= link_to 'Back to Professors List', professors_path, style: 'color: #007bff; text-decoration: none;' %>
</div>
