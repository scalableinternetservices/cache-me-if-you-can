<%= form_with(model: @review, url: professor_reviews_path(@professor), local: true) do |form| %>
  
    <div>
      <%= form.label :content, "Review" %>
      <%= form.text_area :content, required: true %>
    </div>
  
    <div>
      <%= form.label :rating, "Rating" %>
      <%= form.number_field :rating, min: 1, max: 5, required: true %>
    </div>
  
    <div>
      <%= form.label :course_id, "Course" %>
      <%= form.collection_select :course_id, @courses, :id, :name, prompt: "Select a course" %>
    </div>
  
    <div>
      <%= form.submit "Submit Review" %>
    </div>
  <% end %>
  