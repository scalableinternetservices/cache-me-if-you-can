<div id="review-new-page" class="review-form-container">
  <%= form_with(model: @review, url: professor_reviews_path(@professor), local: true, class: "review-form") do |form| %>
    <div class="form-group">
      <%= form.label :content, "Review", class: "form-label" %>
      <%= form.text_area :content, required: true, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :rating, "Rating", class: "form-label" %>
      <%= form.number_field :rating, min: 1, max: 5, required: true, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :course_id, "Course", class: "form-label" %>
      <%= form.collection_select :course_id, @courses, :id, :name, prompt: "Select a course", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= link_to 'Create a New Course', new_course_path, class: 'btn btn-link' %>
    </div>

    <div class="form-group">
      <%= form.submit "Submit Review", class: "submit-button" %>
    </div>

    <div class="form-group">
      <%= link_to 'Go back', professor_path(@professor), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

  